<h2 class="form-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'flex form') do |f| %>
  <% render "application/error_messages", resource: resource %>

  <div class="field flex columns">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
  </div>

  <div class="form-actions flex">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-frm' %>
  </div>
<% end %>

<%= render partial: 'devise/shared/devise_links', layout: 'div_layout', locals: { id_selector: 'devise-links', styles: 'flex' } %>
